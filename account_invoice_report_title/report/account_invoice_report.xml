<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_account_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='o']" position="before">
            <t t-if="o.type in ['out_invoice', 'in_invoice']" t-set="report_title">Invoice</t>
            <t t-else="" t-set="report_title">Refund</t>
        </xpath>
    </template>
</odoo>
